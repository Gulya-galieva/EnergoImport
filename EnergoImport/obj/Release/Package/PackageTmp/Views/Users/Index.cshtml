@model IEnumerable<EnergoImport.Models.User>

@{
    ViewBag.Title = "Пользователи";
}

<h2>Пользователи</h2>

<p>
    @Html.ActionLink("Добавить пользователя", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pass)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessDbUGES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessDbCES)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessImport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditStatusInEnergo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditStatusLinkIsOk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EditStatusAdded)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessComments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pass)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessDbUGES)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessDbCES)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessImport)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditStatusInEnergo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditStatusLinkIsOk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EditStatusAdded)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessComments)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Детали", "Details", new { id=item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
